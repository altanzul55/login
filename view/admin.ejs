<%- include('./admin-layout/header.ejs'); %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
<h2>Users</h2>
<a href="/register" class="btn btn-primary">Create User</a>
<div class="table-responsive">
<table class="table table-striped table-sm">
<thead>
<tr>
<th>Id</th>
<th>Username</th>
<th>Password</th>
<th>Email</th>
<th>Profile Picture</th>
<th>Action</th>
</tr>
</thead>
<tbody>
<% for(var i=0; i< users.length; i++) { %>

<tr>
<td><%= users[i].id %></td>
<td><%= users[i].username %></td>
<td><%= users[i].password %></td>
<td><%= users[i].email %></td>
<td> <img src="../images/avatars/<%= users[i].profilePicture %>"
width="50px"
height="50px"
/>

</td>

<td>
<a href="/edit/<%= users[i].id %>" class="btn btn-primary">Edit</a>
<button id="<%= users[i].id %>" class="btn btn-danger delete-user">Delete </button>
</td>
</tr>
<% } %>
</tbody>
</table>
</div>
</main>
<script src="//code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Icons -->
<script>
$(document).ready(function () {
$(".delete-user").on("click",function(){
var id = this.id;
$.ajax({
url: "/delete/" + id,
type: "DELETE",
success:function(data){
location.reload();
},
error: function(error){
console.log(error);
},
});
});
});
</script>


