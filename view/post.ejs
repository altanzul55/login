<%- include('./admin-layout/header.ejs'); %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
<h2>Post</h2>
<a href="/newPost" class="btn btn-primary">New Post</a>
<div class="table-responsive">
<table class="table table-striped table-sm">
<thead>
<tr>
<th>Id</th>
<th>Title</th>
<th>Content</th>
<th>Content Photo</th>
<th>Action</th>
</tr>
</thead>
<tbody>
<% for(var i=0; i< blog.length; i++) { %>

<tr>
<td><%= blog[i].id %></td>
<td><%= blog[i].title %></td>
<td><%= blog[i].description %></td>
<td> <img src="../images/newsPhoto/<%= blog[i].blogPhoto %>"
width="50px"
height="50px"
/>

</td>

<td>
<a href="/editPost/<%= blog[i].id %>" class="btn btn-primary">Edit</a>
<button id="<%= blog[i].id %>" class="btn btn-danger delete-blog">Delete </button>
</td>
</tr>
<% } %>
</tbody>
</table>
</div>
</main>
<script src="//code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Icons -->
<script>
$(document).ready(function () {
$(".delete-blog").on("click",function(){
var id = this.id;
$.ajax({
url: "/deletePost/" + id,
type: "DELETE",
success:function(data){
location.reload();
},
error: function(error){
console.log(error);
},
});
});
});
</script>
<%- include('./admin-layout/footer.ejs'); %>